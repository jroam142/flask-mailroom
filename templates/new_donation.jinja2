{% extends "base.jinja2" %}

{% block subtitle %}Add New Donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    <label for="donor-name">Donor Name: </label>
    <input type='text' id='donor-name' name='donor-name'>
    <label for="donation-amount">Donation Amount: </label>
    <input type="number" id='donation-amount' name='donation-amount'>
    <input type='submit' value='Add New Donation!'>

</form>

{% endblock content %}